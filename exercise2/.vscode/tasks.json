{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Single file: compile",
            "command": "g++",
            "args": [
                "-g",
                "-Werror",
                "-Wall",
                "${fileBasename}",
                "-lm",
                "-o",
                "${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "All files in directory: compile",
            "command": "g++",
            "args": [
                "-g",
                "-Werror",
                "-Wall",
                "*.cpp",
                "-lm",
                "-o",
                "${config:c_project.program}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Make: compile",
            "command": "make",
            "args": [
                "${config:c_project.program}"
            ],
            "options": {
                "cwd": "${workspaceRoot}/${config:c_project.dir}"
            },
            "presentation": {
                "clear": true,
                "showReuseMessage": false
            },
            "problemMatcher": {
                "base": "$gcc",
                "fileLocation": [
                    "relative",
                    "${workspaceRoot}/${config:c_project.dir}"
                ]
            },
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Single file: compile and run",
            "command": "./${fileBasenameNoExtension}",
            "args": [
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": "Single file: compile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "All files in directory: compile and run",
            "command": "./${config:c_project.program}",
            "args": [
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": "All files in directory: compile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Make: compile and run",
            "command": "./${config:c_project.program}",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": false,
                "clear": true
            },
            "args": [
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${workspaceRoot}/${config:c_project.dir}"
            },
            "problemMatcher": [],
            "dependsOn": "Make: compile",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "type": "shell",
            "label": "Single file: compile and run with valgrind",
            "command": "valgrind",
            "args": [
                "--error-exitcode=1",
                "--leak-check=full",
                "--show-leak-kinds=all",
                "./${fileBasenameNoExtension}",
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": "Single file: compile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "All files in directory: compile and run with valgrind",
            "command": "valgrind",
            "args": [
                "--error-exitcode=1",
                "--leak-check=full",
                "--show-leak-kinds=all",
                "./${config:c_project.program}",
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [],
            "dependsOn": "All files in directory: compile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Make: compile and run with valgrind",
            "command": "valgrind",
            "args": [
                "--error-exitcode=1",
                "--leak-check=full",
                "--show-leak-kinds=all",
                "./${config:c_project.program}",
                "${config:c_project.arg1}",
                "${config:c_project.arg2}",
                "${config:c_project.arg3}",
                "${config:c_project.arg4}",
                "${config:c_project.arg5}",
                "${config:c_project.arg6}",
                "${config:c_project.arg7}",
                "${config:c_project.arg8}",
                "${config:c_project.arg9}",
				"${config:c_project.arg10}",
				"${config:c_project.arg11}",
				"${config:c_project.arg12}",
				"${config:c_project.arg13}",
				"${config:c_project.arg14}",
				"${config:c_project.arg15}",
                "${config:c_project.arg16}"
            ],
            "options": {
                "cwd": "${workspaceRoot}/${config:c_project.dir}"
            },
            "problemMatcher": [],
            "dependsOn": "Make: compile",
            "group": "build"
        },
        {
            "type": "shell",
            "label": "Set program arguments",
            "command": "perl",
            "args": [
                "set_program_args.pl"
            ],
            "presentation": {
                "echo": false
            },
            "options": {
                "cwd": "${workspaceFolder}/.vscode",
                "env": {
                    "ARGS": "${input:args}"
                }
            },
            "problemMatcher": [],
            "group": "build"
        },
    ],
    "inputs": [
        {
            "id": "args",
            "type": "promptString",
            "description": "Program arguments"
        }
    ]
}